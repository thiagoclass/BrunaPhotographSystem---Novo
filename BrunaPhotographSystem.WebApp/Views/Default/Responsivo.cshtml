        @{
            var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
            var showBanner = !consentFeature?.CanTrack ?? false;
            var cookieString = consentFeature?.CreateConsentCookie();
        }
        @if (showBanner)
        {
            <div id="cookieConsent" style="margin-top:5rem;" class="alert alert-light alert-dismissible fade show" role="alert">
                <div class="cookiealert-container">
                    <b>Você gosta de cookies?</b> &#x1F36A; Nós usamos cookies para garantir que você tenha a melhor esperiencia no uso do site. <a href="http://cookiesandyou.com/" target="_blank">Saiba mais.</a>
                    <button type="button" class="btn btn-outline-dark accept-policy" data-dismiss="alert" aria-label="Close" data-cookie-string="@cookieString">
                        <span aria-hidden="true">Eu Concordo</span>
                    </button>
                </div>
            </div>
            <script>
                (function () {
                    var button = document.querySelector("#cookieConsent button[data-cookie-string]");
                    button.addEventListener("click", function (event) {
                        document.cookie = button.dataset.cookieString;
                    }, false);
                })();
            </script>
        }


            <section id="Inicio">

                <div class="">
                    <div id="CarouselTrabalhos" class="carousel slide" data-ride="carousel">

                        <ol class="carousel-indicators">
                            <li data-target="#CarouselTrabalhos" data-slide-to="0" class="active"></li>
                            @{
                                var FotosCarrousel = ViewBag.Carrousel;
                                var FotosCards = ViewBag.Trabalhos;
                            }
                            @for (int i = 1; i <= FotosCarrousel.Count - 1; i++)
                            {
                                <li data-target="#CarouselTrabalhos" data-slide-to="@i"></li>
                            }


                        </ol>
                        <div class="carousel-inner">
                            @for (int i = 0; i <= FotosCarrousel.Count - 1; i++)
                            {
                                if (i == 0)
                                {
                                    <div class="carousel-item active">
                                        <!--style="max-width:100%;max-height:100%; display: block;margin-left: auto;margin-right: auto;"-->
                                        <img src=@FotosCarrousel[i].FotoUrl class="img-fluid d-block ZoomCarrousel align-items-center" />

                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>@FotosCarrousel[i].Nome</h5>
                                            <p>@FotosCarrousel[i].Descricao</p>
                                        </div>
                                    </div>
                                }
                                if (i > 0)
                                {
                                    <div class="carousel-item">
                                        <img src=@FotosCarrousel[i].FotoUrl class="img-fluid d-block ZoomCarrousel" />

                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>@FotosCarrousel[i].Nome</h5>
                                            <p>@FotosCarrousel[i].Descricao</p>
                                        </div>
                                    </div>
                                }


                            }

                        </div>
                        <a class="carousel-control-prev" href="#CarouselTrabalhos" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#CarouselTrabalhos" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <!--<h2 style="position:absolute;top:1px;left:45%;" class="Titulo FonteCursiva display-4">Início</h2>-->
            </section>

        <section id="Trabalhos">
            <div class="jumbotron jumbotron-fluid BackBlack">
                <div class="container justify-content-center">
                    <h1 class="Titulo FonteCursiva display-4 text-center">Álbuns</h1>
                    <p class=" Titulo lead FonteCursiva text-center">Aqui está alguns exemplos do meu trabalho.</p>
                </div>
            </div>


            <div class="row">
                @{
                    for (int i = 0; i <= FotosCards.Count - 1; i++)
                    {

                        if (i + 1 % 3 == 0)
                        {
                            @Html.Raw("</div>")
                            @Html.Raw("<div class='row'>")
                        }

                        <div class="col-lg-4 col-md-12 mb-4">
                            <!--Modal: Name-->
                            <div class="modal fade" id=@Html.Raw("'modal"+i+"'") tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg" role="document">

                                    <!--Content-->
                                    <div class="modal-content">

                                        <!--Body-->
                                        <div class="modal-body mb-0 p-0">

                                            <div>
                                                <img class="img-fluid img-thumbnail" src=@FotosCards[i].FotoUrl>
                                            </div>

                                        </div>

                                    </div>
                                    <!--/.Content-->

                                </div>
                            </div>
                            <!--Modal: Name-->
                            <a>
                                <img class="img-fluid z-depth-1 card-img"
                                     data-toggle="modal" data-target=@Html.Raw("'#modal"+i+"'") src=@FotosCards[i].FotoUrl>
                            </a>
                        </div>
                    }
                }

            </div>
            </section>

